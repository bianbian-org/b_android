<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.techjumper.polyhome.b.property.mvp.v.fragment.ActionFragment">

    <TextView
        android:id="@+id/fa_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_B3ffffff"
        android:textSize="@dimen/sp_20"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/property_new_complaint"/>

    <include layout="@layout/layout_repair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_gravity="center"
        android:layout_centerInParent="true"/>

    <include layout="@layout/layout_complaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_gravity="center"
        android:layout_centerInParent="true"/>
</LinearLayout>
