<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notice_layout"
    android:layout_width="@dimen/dp_330"
    android:layout_height="@dimen/dp_330"
    android:background="@drawable/selector_button_466780">

    <TextView
        android:id="@+id/notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="@string/info_not_new"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_35"
        android:textStyle="bold" />

    <com.techjumper.polyhome.b.home.widget.TextAutoView
        android:id="@+id/notice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_title"
        android:layout_marginBottom="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_35"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.2"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:textColor="@color/color_7fffffff"
        android:text=""
        android:textSize="@dimen/sp_32" />

    <FrameLayout
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:background="@mipmap/bg_quarter_new">

        <TextView
            android:id="@+id/notice_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_2"
            android:text="0"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </FrameLayout>
</RelativeLayout>
