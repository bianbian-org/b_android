<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_27"
    android:layout_marginLeft="@dimen/dp_30"
    android:layout_marginRight="@dimen/dp_30"
    android:visibility="gone"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/info_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_20"
            tools:text="您的洗衣订单已激活，请等待工作人员上门" />

        <TextView
            android:id="@+id/info_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:textColor="@color/color_7fffffff"
            android:textSize="@dimen/sp_20"
            tools:text="10月20日" />

        <TextView
            android:id="@+id/info_detail_type"
            android:layout_width="41dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/bg_shape_radius_20c3f3"
            android:gravity="center"
            android:text="@string/info_system"
            android:textSize="@dimen/dp_18"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/color_1Affffff"/>

    <TextView
        android:id="@+id/info_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_7fffffff"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_16"/>
</LinearLayout>
