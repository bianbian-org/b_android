<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ebecec"
    android:orientation="vertical">

    <include layout="@layout/title_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@color/color_ededed" />

            <include layout="@layout/item_property_repair_divider_long" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="@string/pay_name"
                    android:textColor="@color/color_3e3e3e"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_pay_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:textColor="@color/color_a8a8a8"
                    android:textSize="@dimen/sp_15" />

            </RelativeLayout>

            <include layout="@layout/item_property_placard_divider_" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="@string/pay_type"
                    android:textColor="@color/color_3e3e3e"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:textColor="@color/color_a8a8a8"
                    android:textSize="@dimen/sp_15" />

            </RelativeLayout>

            <include layout="@layout/item_property_placard_divider_" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="@string/pay_object"
                    android:textColor="@color/color_3e3e3e"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_pay_object"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:textColor="@color/color_a8a8a8"
                    android:textSize="@dimen/sp_15" />

            </RelativeLayout>

            <include layout="@layout/item_property_placard_divider_" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="@string/pay_death_line_"
                    android:textColor="@color/color_3e3e3e"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_pay_death_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:textColor="@color/color_a8a8a8"
                    android:textSize="@dimen/sp_15" />

            </RelativeLayout>

            <include layout="@layout/item_property_repair_divider_long" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:textColor="@color/color_ff7f00"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/tv_other_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:textColor="@color/color_a8a8a8"
                    android:textSize="@dimen/sp_15" />

            </RelativeLayout>

            <include layout="@layout/item_property_repair_divider_long" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@color/color_ededed" />

            <include layout="@layout/item_property_repair_divider_long" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="@string/choose_payment"
                    android:textColor="@color/color_727272"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>

            <include layout="@layout/item_property_repair_divider_long" />

            <RelativeLayout
                android:id="@+id/layout_tencent_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:drawableLeft="@mipmap/icon_tenpay"
                    android:drawablePadding="@dimen/dp_11"
                    android:gravity="center"
                    android:text="@string/tencent_pay"
                    android:textColor="@color/color_3e3e3e"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/iv_tencent_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_60"
                android:background="@color/color_ceced2" />

            <RelativeLayout
                android:id="@+id/layout_alipay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:drawableLeft="@mipmap/icon_alipay"
                    android:drawablePadding="@dimen/dp_11"
                    android:gravity="center"
                    android:text="@string/alipay_pay"
                    android:textColor="@color/color_3e3e3e"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/iv_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_60"
                android:background="@color/color_ceced2" />

            <RelativeLayout
                android:id="@+id/layout_union_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:drawableLeft="@mipmap/icon_unionpay"
                    android:drawablePadding="@dimen/dp_11"
                    android:gravity="center"
                    android:text="@string/unionpay_pay"
                    android:textColor="@color/color_3e3e3e"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/iv_union_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_60"
                android:background="@color/color_ceced2" />

            <RelativeLayout
                android:id="@+id/layout_yi_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:drawableLeft="@mipmap/icon_yipay"
                    android:drawablePadding="@dimen/dp_11"
                    android:gravity="center"
                    android:text="@string/yi_pay"
                    android:textColor="@color/color_3e3e3e"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/iv_yi_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14" />

            </RelativeLayout>

            <include layout="@layout/item_property_repair_divider_long" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@color/color_ededed" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/item_property_repair_divider_long" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_total_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:text="@string/total"
            android:textColor="@color/color_3e3e3e"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_total_with_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_total_"
            android:textColor="@color/color_ff7f00"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:background="@color/color_24c88a"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:text="@string/pay_order"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_18" />

    </RelativeLayout>

</LinearLayout>