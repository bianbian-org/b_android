            android:padding="@dimen/dp_2"
            android:text="12æœˆ"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_11" />

        <View
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_13_5"
            android:layout_below="@+id/tv_time"
