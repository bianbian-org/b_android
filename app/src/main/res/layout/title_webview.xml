<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_37a991">

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/left_group_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="12.4dp"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_13">

        <ImageView
            android:visibility="gone"
            android:id="@+id/left_first_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/left_first_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_16" />
    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/left_group_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/left_group_first"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="12.4dp"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_13">

        <ImageView
            android:visibility="gone"
            android:id="@+id/left_second_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/left_second_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ffffff"
            android:visibility="gone"
            android:textSize="@dimen/dp_16" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:paddingTop="@dimen/dp_8"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_20" />

    <FrameLayout
        android:id="@+id/right_group_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/right_group_first"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="12.4dp"
        android:paddingTop="@dimen/dp_13"
        android:visibility="visible">

        <ImageView
            android:visibility="gone"
            android:id="@+id/right_second_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/right_second_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_16" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_group_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="12.4dp"
        android:paddingTop="@dimen/dp_13"
        android:visibility="visible">

        <ImageView
            android:visibility="gone"
            android:id="@+id/right_first_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/right_first_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_16" />
    </FrameLayout>

</RelativeLayout>