<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_ebecec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/title_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="141.8dp"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@color/color_ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="@string/regist_phone"
                    android:textColor="@color/color_a8a8a8"
                    android:textSize="@dimen/sp_16"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_14"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/color_a8a8a8"
                    android:textSize="@dimen/sp_16"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@color/color_ceced2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="@string/regist_verification_code"
                    android:textColor="@color/color_a8a8a8"
                    android:textSize="@dimen/sp_16"/>

                <EditText
                    android:id="@+id/et_verification_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_weight="1"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_a8a8a8"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/tv_get_verification_code"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/bg_green_button"
                    android:gravity="center"
                    android:padding="@dimen/dp_6"
                    android:text="@string/regist_get_verification_code"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/sp_16"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@color/color_ceced2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_psw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="@string/regist_password"
                    android:textColor="@color/color_a8a8a8"
                    android:textSize="@dimen/sp_16"/>

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_14"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:inputType="textVisiblePassword"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_a8a8a8"
                    android:textSize="@dimen/sp_16"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_regist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/bg_green_button"
            android:gravity="center"
            android:text="@string/regist_regist"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_20"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_60">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_agreement1"
            android:textColor="@color/color_727272"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv"
            android:text="@string/user_agreement2"
            android:textColor="@color/color_37a991"
            android:textSize="@dimen/sp_14"/>

    </RelativeLayout>


</RelativeLayout>