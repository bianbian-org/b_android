<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_37a991">

    <FrameLayout
        android:id="@+id/back_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="12.4dp"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_13">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_16" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/close_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/back_group"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_13">

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_16" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:paddingTop="@dimen/dp_8"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_20" />

    <FrameLayout
        android:id="@+id/refresh_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="12.4dp"
        android:paddingTop="@dimen/dp_13"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refresh"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_16" />
    </FrameLayout>

</RelativeLayout>