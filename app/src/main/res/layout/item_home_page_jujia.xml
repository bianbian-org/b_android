<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:polymodeview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/jujia"
        android:textColor="@color/color_727272"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:orientation="horizontal">

        <com.techjumper.polyhomeb.widget.PolyModeView
            android:id="@+id/first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            polymodeview:centerIconHeight="60"
            polymodeview:centerIconWidth="60"
            polymodeview:ratio="1.333"
            polymodeview:textColor="@color/color_727272"
            polymodeview:textMarginTop="@dimen/dp_5"
            polymodeview:textSize="@dimen/sp_13" />

        <com.techjumper.polyhomeb.widget.PolyModeView
            android:id="@+id/second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            polymodeview:centerIconHeight="60"
            polymodeview:centerIconWidth="60"
            polymodeview:ratio="1.333"
            polymodeview:textColor="@color/color_727272"
            polymodeview:textMarginTop="@dimen/dp_5"
            polymodeview:textSize="@dimen/sp_13" />

        <com.techjumper.polyhomeb.widget.PolyModeView
            android:id="@+id/third"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            polymodeview:centerIconHeight="60"
            polymodeview:centerIconWidth="60"
            polymodeview:ratio="1.333"
            polymodeview:textColor="@color/color_727272"
            polymodeview:textMarginTop="@dimen/dp_5"
            polymodeview:textSize="@dimen/sp_13" />

        <com.techjumper.polyhomeb.widget.PolyModeView
            android:id="@+id/more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            polymodeview:centerIconHeight="60"
            polymodeview:centerIconWidth="60"
            polymodeview:ratio="1.333"
            polymodeview:src="@mipmap/icon_more"
            polymodeview:text="@string/more"
            polymodeview:textColor="@color/color_727272"
            polymodeview:textMarginTop="@dimen/dp_5"
            polymodeview:textSize="@dimen/sp_13" />

    </LinearLayout>


</LinearLayout>